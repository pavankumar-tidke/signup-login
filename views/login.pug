doctype html
html
    head
        title= title_signUp
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x", crossorigin="anonymous")
        link(rel='stylesheet', href='/stylesheets/style.css')
    body(style='background: url("/images/login.jpg")center center cover;')
        block content
            nav.login
                ul
                    li
                        a(href='/') Home
                        a(href='/signup') Sign Up
                        a.active(href='/login') Log In
                        a.linkHide(href='/logout') Log out

            // LOGIN header
            header
                .main.text-center
                    h3 Welcome to the Express-Ajax
                    h4 Log In Please...

            div.loginForm
                form(action='log', method='post')
                    h4.fw-bold.text-center Log In
                    h5.text-center.text-danger= alert
                    div.form-group
                        label(for='username') Username
                        input.form-control(type='text', name='uname', id='uname')

                    div.form-group
                        label(for='password') Password
                        input.form-control(type='password', name='pword', id='pword')
                    hr
                    button.btn.btn-md.btn-primary(type='submit') Log In




    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js", integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4", crossorigin="anonymous")            
    script(src='./javascripts/jquery.js')